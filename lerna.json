{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "registry": "http://localhost:4873/",
      "yes": true,
      "contents": "build ./package.json"
    },
    "version": {
      "message": "chore(release): publish %s",
      "noPrivate": true
    }
  }
}
